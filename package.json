{
  "name": "shahadot-portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:frontend": "yarn workspace shahadot-portfolio dev",
    "dev:backend": "yarn workspace @portfolio/backend dev",
    "build": "yarn build:backend && yarn build:frontend",
    "build:frontend": "yarn workspace shahadot-portfolio build",
    "build:backend": "yarn workspace @portfolio/backend build",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "start:frontend": "yarn workspace shahadot-portfolio start",
    "start:backend": "yarn workspace @portfolio/backend start",
    "lint": "yarn workspaces run lint",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
